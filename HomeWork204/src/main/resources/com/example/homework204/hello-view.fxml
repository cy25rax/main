<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import com.sun.javafx.scene.control.ContextMenuContent.ArrowMenuItem?>
<?import javafx.scene.text.TextFlow?>
<VBox alignment="CENTER" prefHeight="199.0" prefWidth="275.0" spacing="20.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.homework204.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <MenuBar>
        <Menu text="options" >
            <MenuItem text="nick" onAction="#menuNick" />
        </Menu>
    </MenuBar>
    <HBox>
        <TextArea fx:id="messageArea" editable="false" VBox.vgrow="ALWAYS" />
        <TextArea fx:id="messagePeople" editable="false" prefHeight="400.0" prefWidth="200.0" text="в чате:" VBox.vgrow="ALWAYS" />
    </HBox>
    <HBox>
        <TextField fx:id="messageField" HBox.hgrow="ALWAYS" />
        <Button defaultButton="true" onAction="#checkButton" text="send" />
    </HBox>
</VBox>
